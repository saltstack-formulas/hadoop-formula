{%- from 'hadoop/settings.sls' import hadoop with context %}
{%- from 'hadoop/hdfs/settings.sls' import hdfs with context %}
{%- set dyn_cfg = hadoop.get('config_core_site', {}) %}
{%- set major = hadoop.major_version|string() -%}
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
{%- if major == '1' %}
    <property>
        <name>fs.checkpoint.dir</name>
        <value>
{%- for d in hdfs.local_disks -%}
{%- if loop.last -%}
{{ d }}/hdfs/snn
{%- else -%}
{{ d }}/hdfs/snn,
{%- endif -%}
{%- endfor -%}</value>
        <final>true</final>
    </property>
{%- endif %}

    <property>
{%- if major == '1' %}
        <name>fs.default.name</name>
{%- else %}
        <name>fs.defaultFS</name>
{%- endif %}
        <value>hdfs://{{ hdfs.namenode_host }}:{{ hdfs.namenode_port }}</value>
    </property>
     
<!--
    <property>
        <name>hadoop.tmp.dir</name>
        <value>{{ hdfs.tmp_dir }}</value>
    </property>
-->

{%- for name, subdict in dyn_cfg.items() %}
    <property>
        <name>{{ name }}</name>
{%- for k,v in subdict.items() %}
        <{{k}}>{{ v }}</{{k}}>
{%- endfor %}
    </property>

{%- endfor %}
</configuration>
